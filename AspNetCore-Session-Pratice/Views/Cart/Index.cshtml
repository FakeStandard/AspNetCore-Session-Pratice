
@{
    ViewData["Title"] = "Cart Index";
}

<h3>Cart Page</h3>
<table class="table border" cellpadding="2" cellspacing="2">
    <tr>
        <th>Option</th>
        <th>Id</th>
        <th>Name</th>
        <th>Photo</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sub Total</th>
    </tr>

    @foreach (var item in ViewBag.cart)
    {
        <tr>
            <td><a class="btn btn-danger" asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.ID">Remove</a></td>
            <td>@item.Product.ID</td>
            <td>@item.Product.Name</td>
            <td><img src="~/lib/images/@item.Product.Photo" width="60" /> </td>
            <td>@item.Product.Price</td>
            <td>@item.Quantity</td>
            <td>@(item.Product.Price * item.Quantity)</td>
        </tr>
    }
    <tr>
        <td align="right" colspan="6">Sum</td>
        <td>
            @ViewBag.total
        </td>
    </tr>
</table>
<br>
<a class="btn btn-info" asp-controller="product" asp-action="index">Continue Shopping</a>